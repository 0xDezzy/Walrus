<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bugfuzz.android.projectwalrus.DisplayDetailedCardviewActivity">

    <View
        android:id="@+id/card_header"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@drawable/rounded_cardview"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:id="@+id/card_body"
        android:layout_width="fill_parent"
        android:layout_height="264dp"
        android:layout_below="@id/card_header"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_header"/>


    <TextView
        android:id="@+id/CardTitle"
        android:layout_width="239dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/card_header"
        app:layout_constraintTop_toTopOf="@+id/card_header"
        android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>
