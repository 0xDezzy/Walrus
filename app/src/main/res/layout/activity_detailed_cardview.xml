<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bugfuzz.android.projectwalrus.ui.DetailedCardViewActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/detailedCardView_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/detailedCardView_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fillViewport="false"
        android:scrollbarStyle="insideOverlay">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.bugfuzz.android.projectwalrus.ui.DetailedCardViewActivity">


            <View
                android:id="@+id/card_header"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/rounded_cardview"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailedCardView_appBarLayout" />

            <TextView
                android:id="@+id/txtView_DetailedViewCardTitle"
                android:layout_width="202dp"
                android:layout_height="110dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:maxLength="60"
                android:maxLines="3"
                android:text="@string/textView_dummyCardTitle"
                android:textColor="@android:color/background_light"
                android:textSize="22sp"
                app:layout_constraintLeft_toLeftOf="@+id/card_header"
                app:layout_constraintRight_toLeftOf="@+id/Img_DetailedCardView"
                app:layout_constraintTop_toTopOf="@+id/card_header" />

            <TextView
                android:id="@+id/txtView_DetailedViewCardUID"
                android:layout_width="307dp"
                android:layout_height="26dp"
                android:layout_marginBottom="16dp"
                android:background="@android:color/darker_gray"
                android:text="@string/textView_dummyCardData"
                android:textAlignment="center"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/card_header"
                app:layout_constraintHorizontal_bias="0.499"
                app:layout_constraintLeft_toRightOf="@+id/card_header"
                app:layout_constraintRight_toLeftOf="@+id/card_header" />

            <ImageView
                android:id="@+id/Img_DetailedCardView"
                android:layout_width="90dp"
                android:layout_height="71dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintRight_toRightOf="@+id/card_header"
                app:layout_constraintTop_toTopOf="@+id/card_header"
                app:srcCompat="@drawable/hid" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_header">

                <Button
                    android:id="@+id/button_write"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:onClick="onWriteCardClick"
                    android:text="@string/btn_writeCard"
                    app:layout_constraintLeft_toLeftOf="@+id/card_body"
                    app:layout_constraintRight_toRightOf="@+id/card_body"
                    app:layout_constraintTop_toTopOf="@+id/card_body" />

                <Button
                    android:id="@+id/button_emulate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="@string/btn_emulateCard"
                    app:layout_constraintLeft_toLeftOf="@+id/card_body"
                    app:layout_constraintRight_toRightOf="@+id/card_body"
                    app:layout_constraintTop_toTopOf="@+id/card_body" />

            </LinearLayout>

            <View
                android:id="@+id/card_body"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@id/card_header"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

            <TextView
                android:id="@+id/txtView_DateAcquired_title"
                android:layout_width="328dp"
                android:layout_height="26dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/textView_title_dateAcquired"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintLeft_toLeftOf="@+id/card_body"
                app:layout_constraintRight_toRightOf="@+id/card_body"
                app:layout_constraintTop_toTopOf="@+id/card_body" />

            <TextView
                android:id="@+id/txtView_DetailedCardView_CardAcquiredDate"
                android:layout_width="309dp"
                android:layout_height="23dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/textView_dummyCardDateAcquired"
                android:textSize="12sp"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintLeft_toLeftOf="@+id/card_body"
                app:layout_constraintRight_toRightOf="@+id/card_body"
                app:layout_constraintTop_toBottomOf="@+id/txtView_DateAcquired_title" />

            <TextView
                android:id="@+id/txtView_CardLocation_title"
                android:layout_width="328dp"
                android:layout_height="26dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/textView_title_cardLocation"
                app:layout_constraintLeft_toLeftOf="@+id/card_body"
                app:layout_constraintRight_toRightOf="@+id/card_body"
                app:layout_constraintTop_toBottomOf="@+id/txtView_DetailedCardView_CardAcquiredDate" />

            <fragment
                android:id="@+id/fragment_DetailedCardView_MapFragment"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="309dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/card_body"
                app:layout_constraintRight_toRightOf="@+id/card_body"
                app:layout_constraintTop_toBottomOf="@+id/txtView_CardLocation_title" />

            <TextView
                android:id="@+id/txtView_CardNotes_title"
                android:layout_width="328dp"
                android:layout_height="26dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/textView_title_cardNotes"
                app:layout_constraintLeft_toLeftOf="@+id/card_body"
                app:layout_constraintRight_toRightOf="@+id/card_body"
                app:layout_constraintTop_toBottomOf="@+id/fragment_DetailedCardView_MapFragment" />

            <TextView
                android:id="@+id/txtView_DetailedCardView_CardNotes"
                android:layout_width="309dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/textView_dummyCardNotes"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/card_body"
                app:layout_constraintRight_toRightOf="@+id/card_body"
                app:layout_constraintTop_toBottomOf="@+id/txtView_CardNotes_title" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>