<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bugfuzz.android.projectwalrus.DetailedCardViewActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detailedCardview_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/sea_green"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <View
        android:id="@+id/card_header"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_cardview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/detailedCardview_toolbar"/>

    <TextView
        android:id="@+id/txtView_DetailedViewCardTitle"
        android:layout_width="182dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="Office Entrace"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/card_header"
        app:layout_constraintTop_toTopOf="@+id/card_header"/>

    <TextView
        android:id="@+id/txtView_DetailedViewCardUID"
        android:layout_width="307dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        android:text="5552-000000125555"
        android:textAlignment="center"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_header"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintLeft_toRightOf="@+id/card_header"
        app:layout_constraintRight_toLeftOf="@+id/card_header"
        app:layout_constraintTop_toBottomOf="@+id/txtView_DetailedViewCardTitle"
        app:layout_constraintVertical_bias="0.877"/>

    <ImageView
        android:id="@+id/Img_DetailedCardView"
        android:layout_width="90dp"
        android:layout_height="71dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/txtView_DetailedViewCardTitle"
        app:layout_constraintRight_toRightOf="@+id/card_header"
        app:layout_constraintTop_toTopOf="@+id/card_header"
        app:srcCompat="@drawable/hid"/>

    <View
        android:id="@+id/card_body"
        android:layout_width="0dp"
        android:layout_height="264dp"
        android:layout_below="@id/card_header"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_header"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="328dp"
        android:layout_height="26dp"
        android:text="TextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/card_body"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/card_body"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="328dp"
        android:layout_height="26dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/card_body"
        app:layout_constraintRight_toRightOf="@+id/card_body"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="328dp"
        android:layout_height="26dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/card_body"
        app:layout_constraintRight_toRightOf="@+id/card_body"
        app:layout_constraintTop_toTopOf="@+id/card_body"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>
