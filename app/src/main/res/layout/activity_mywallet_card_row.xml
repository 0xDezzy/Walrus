<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_height="100dp">

    <com.pkmmte.view.CircularImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imgCard"
        android:src="@drawable/hid"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        app:border="true"
        app:border_color="#EEEEEE"
        app:border_width="2dp"
        app:shadow="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Card Name"
        android:id="@+id/txtCardTitle"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        android:lines="1"
        android:paddingTop="10dp"
        android:ellipsize="marquee"
        android:layout_alignTop="@+id/imgCard"
        android:layout_toEndOf="@+id/imgCard" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Card UID"
        android:id="@+id/txtCardUID"
        android:layout_marginEnd="15dp"
        android:lines="2"
        android:paddingBottom="10dp"
        android:ellipsize="end"
        android:layout_below="@+id/txtCardTitle"
        android:layout_alignStart="@+id/txtCardTitle" />

</RelativeLayout>